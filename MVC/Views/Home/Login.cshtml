@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - Prova 2</title>
    <link rel="stylesheet" href="~/Content/login.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.4.2.js" type="text/javascript"></script>
    <script src="~/ViewModels/LoginViewModel.js" type="text/javascript"></script>
</head>
<body>
    <div class="grandParentContainer">
        <div class="parentContainer">
            <form class="form-signin" method="POST" id='loginForm'>
                <h3 class="form-signin-heading">Prova</h3>
                <label for="inputLogin" class="sr-only">Login</label>
                <input type="text" id="inputLogin" name="login" data-bind = "value: firstString" class="form-control" placeholder="Entre com o e-mail" required autofocus>
                <label for="inputPassword" class="sr-only">Senha</label>
                <input type="password" id="inputPassword" name="senha" data-bind = "value: secondString" class="form-control" placeholder="Entre com a senha" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="/Conta/Index">Criar uma conta <span class="glyphicon glyphicon-user pull-right"></span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Conta/Index">Esqueci minha senha <span class="glyphicon glyphicon-edit pull-right"></span></a></li>
                </ul>
            </form>

        </div>
    </div>
</body>
</html>
