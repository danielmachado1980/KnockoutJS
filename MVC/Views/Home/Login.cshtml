@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" href="~/Content/login.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <div class="grandParentContainer">
        <div class="parentContainer">
            <form class="form-signin" method="POST" id='loginForm'>
                <h3 class="form-signin-heading">Prova</h3>
                <label for="inputLogin" class="sr-only">Login</label>
                <input type="text" id="inputLogin" name="login" class="form-control" placeholder="Entre com o e-mail" required autofocus>
                <label for="inputPassword" class="sr-only">Senha</label>
                <input type="password" id="inputPassword" name="senha" class="form-control" placeholder="Entre com a senha" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Criar uma conta</button>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Esqueci minha senha</button>
            </form>
        </div>
    </div>
</body>
</html>
